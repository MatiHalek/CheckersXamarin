<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MMMW_Warcaby.MainPage">

    <StackLayout>
        <StackLayout.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Offset="0.3" Color="#602E8B57"/>
                <GradientStop Offset="0.6" Color="#701E90FF"/>
                <GradientStop Offset="1.0" Color="#50663399"/>
            </LinearGradientBrush>
        </StackLayout.Background>
        <Grid ColumnSpacing="0" RowSpacing="0" ColumnDefinitions="*,*,*,*,*,*,*,*" RowDefinitions="*,*,*,*,*,*,*,*" WidthRequest="320" HeightRequest="320" VerticalOptions="CenterAndExpand" HorizontalOptions="Center" x:Name="grid"/>
        <Button TextColor="White" BackgroundColor="DarkBlue" CornerRadius="15" Margin="5" Text="Use engine to make a move" Clicked="AutoMove_Clicked"/>
    </StackLayout>

</ContentPage>
